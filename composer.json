{
    "name": "distvan/dialclient",
    "description": "HTTP client library built on top of Guzzle with async requests and stream support.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "guzzlehttp/promises": "^2.0",
        "guzzlehttp/psr7": "^2.6",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.1 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.60",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "DialClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DialClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "php -d xdebug.mode=off vendor/bin/phpunit",
        "phpstan": "php -d xdebug.mode=off vendor/bin/phpstan analyse -c phpstan.neon --no-progress",
        "cs": "php -d xdebug.mode=off vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
